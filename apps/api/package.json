{
    "name": "telecom-fieldops-api",
    "version": "1.0.0",
    "description": "API FieldOps Telecom - operations, inventory, work orders",
    "main": "dist/main.js",
  "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/main.js",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "openapi:validate": "node ../../scripts/validate-openapi.js src/openapi/openapi.yaml",
        "test": "echo \"No tests yet\""
    },
    "engines": {
        "node": ">=18"
    },
    "dependencies": {
        "express": "^4.21.0",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@apidevtools/swagger-parser": "^12.1.0",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "@types/uuid": "^10.0.0",
        "js-yaml": "^4.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.0"
    }
}