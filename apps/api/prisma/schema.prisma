generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

// In Prisma 7 the connection URLs (DATABASE_URL, DIRECT_URL) are set in prisma.config.ts, not here.
datasource db {
  provider = "postgresql"
}

model Role {
  id              String   @id
  name            String   @unique
  permissionKeys  Json     @default("[]") @map("permission_keys")
}

model User {
  id           String   @id
  email        String   @unique
  passwordHash String   @map("password_hash")
  blocked      Boolean  @default(false)
  roles        String[] @default([])
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
}

model RevokedRefreshToken {
  jti       String   @id
  userId    String   @map("user_id")
  exp       BigInt
  revokedAt DateTime @map("revoked_at")
}

model Audit {
  id            String   @id
  at            DateTime @default(now())
  actorUserId   String?  @map("actor_user_id")
  action        String
  entityType    String   @map("entity_type")
  entityId      String   @map("entity_id")
  before        Json?
  after         Json?
  correlationId String   @map("correlation_id")
}

model Plan {
  id                String   @id
  name              String
  type              String
  price             Decimal  @db.Decimal(12, 2)
  currency          String
  isActive          Boolean  @default(true) @map("is_active")
  description       String   @default("")
  category          String
  status            String
  monthlyPrice      Decimal  @map("monthly_price") @db.Decimal(12, 2)
  downloadSpeedMbps Int?     @map("download_speed_mbps")
  uploadSpeedMbps   Int?     @map("upload_speed_mbps")
  dataLimitGb       Int?     @map("data_limit_gb")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")
}

model Product {
  id           String      @id
  name         String
  category     String
  isSerialized Boolean     @default(false) @map("is_serialized")
  inventory    Inventory[]
}

model Branch {
  id        String      @id
  name      String
  isMain    Boolean     @default(false) @map("is_main")
  inventory Inventory[]
}

model Inventory {
  id           String   @id
  branchId     String   @map("branch_id")
  productId    String   @map("product_id")
  qtyAvailable Int      @default(0) @map("qty_available")
  qtyReserved  Int      @default(0) @map("qty_reserved")
  updatedAt    DateTime @updatedAt @map("updated_at")
  branch       Branch   @relation(fields: [branchId], references: [id])
  product      Product  @relation(fields: [productId], references: [id])
  @@unique([branchId, productId])
}

model Reservation {
  workOrderId String   @id @map("work_order_id")
  branchId    String   @map("branch_id")
  items       Json     @default("[]")
  reservedAt  DateTime @default(now()) @map("reserved_at")
}

model AuditLog {
  id            BigInt   @id @default(autoincrement())
  at            DateTime @default(now())
  tableName     String   @map("table_name")
  operation     String
  oldRow        Json?    @map("old_row")
  newRow        Json?    @map("new_row")
  actorUserId   String?  @map("actor_user_id")
  correlationId String? @map("correlation_id")
}